#!/bin/bash

###########################################################################
# Release creates tag and upload all supported packages to tag in Github release pages
#
# Usage:
#> bin/release_github <version>

# Release version (with personal Github account):
#> git config --global github.token "verysecrettoken"
#> bin/release_github 0.0.1

GHR_BIN=`which ghr`
if [ ! -x "$GHR_BIN" ]; then
    printf "\e[0;31m%s\e[0m\n" "Missing tool 'ghr'!"
    exit 1
fi

VERSION=$1
if [ -z "$VERSION" ]; then
    printf "\e[0;31m%s\e[0m\n" "Missing version!"
    exit 1
fi

DIR_BUILD="build/package"

printf "Creating Github release '$VERSION' ..\n" \
    && ghr \
        --owner="MysteriumNetwork" \
        --repository="node" \
        --prerelease \
        --parallel=100 \
        $VERSION $DIR_BUILD \
    && printf "\e[0;32m%s\e[0m\n" "Github release '$VERSION' created!"

open https://github.com/MysteriumNetwork/node/releases/tag/$VERSION
exit 0
