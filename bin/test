#!/bin/bash

# Run tests for project packages
#
# Usage example:
#> bin/test
#> bin/test .
#> bin/test ./...
#> bin/test ./communication
#> bin/test ./communication/...

ARGUMENTS=$@
if [ -z "$ARGUMENTS" ]; then
    ARGUMENTS=`go list ./...`
fi

if go test -cover ${ARGUMENTS} ; then
    echo "All tests passed."
    exit 0
else
    echo "Some tests failed!"
    exit -1
fi
