#!/bin/bash

# Usage example:
#> bin/server_build
#
# Cross compile (Unix):
#> GOOS=linux GOARCH=amd64 bin/server_build
#
# Cross compile (OSX):
#> GOOS=darwin GOARCH=amd64 bin/server_build
#
# Cross compile (Windows):
#> GOOS=windows GOARCH=amd64 bin/server_build
#
# Check if program has dynamic libraries:
#> readelf -d mysterium_server

: ${GOOS:=`go env GOHOSTOS`}
: ${GOARCH:=`go env GOHOSTARCH`}

echo "Compiling application for '$GOOS/$GOARCH'.."
GOBIN=`pwd` go install mysterium_server.go
if [ $? -ne 0 ] ; then
    printf "\e[0;31m%s\e[0m\n" "Compile failed!";
    exit 1
fi

exit 0